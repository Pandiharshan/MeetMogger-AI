# Gemini AI API Key - Get from Google AI Studio
GEMINI_API_KEY=your_actual_gemini_api_key_here
VITE_GEMINI_API_KEY=your_actual_gemini_api_key_here

# MongoDB Connection String
# Local: mongodb://localhost:27017/meetmogger-ai
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/meetmogger-ai
MONGODB_URI=mongodb://localhost:27017/meetmogger-ai

# JWT Secret - Use a strong, random 32+ character string
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars-long

# Server Port
PORT=3001

# Allowed CORS Origins (comma-separated)
# Development: http://localhost:3000,http://localhost:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend API URL (for Vite)
VITE_API_BASE_URL=http://localhost:3001

# Supabase Configuration (if using Supabase instead of MongoDB)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key